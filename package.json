{
  "name": "template",
  "scripts": {
    "format": "pnpm format:c && pnpm format:t && pnpm format:d",
    "format:c": "pnpm prtf:c && pnpm lint:c",
    "format:t": "pnpm prtf:t && pnpm lint:t",
    "format:d": "pnpm prtf:d && pnpm lint:d",
    "prtf:c": "pnpm prettier --write ./contracts/**/*.sol",
    "prtf:t": "pnpm prettier --write ./test",
    "prtf:d": "pnpm prettier --write ./deploy",
    "lint:c": "pnpm solhint 'contracts/**/*.sol",
    "lint:t": "pnpm eslint --fix ./test",
    "lint:d": "pnpm eslint --fix ./deploy",
    "compile": "pnpm format:c && pnpm hardhat compile",
    "test": "pnpm format:t && pnpm hardhat test",
    "deploy:m": "pnpm format:c && pnpm hardhat deploy --tags mainnet",
    "coverage": "pnpm hardhat coverage",
    "size": "pnpm compile && pnpm hardhat size-contracts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.55",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "chai": "^4.2.0",
    "coverage": "^0.4.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.8.3",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.11",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.1.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.2"
  }
}
